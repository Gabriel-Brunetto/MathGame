<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathGame.MainPage"
             BackgroundColor="#2F2F69">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Margin="0,20,0,0">

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Image Source="abaco.png" MaximumWidthRequest="30" MaximumHeightRequest="40"/>
                <Label Text="JOGO MATEMÁTICO" TextColor="White" FontSize="28" FontAttributes="Bold" VerticalTextAlignment="Center"/>
            </HorizontalStackLayout>

            <Grid BackgroundColor="#2C3E50" Margin="20,0" Padding="0" ColumnSpacing="20"
                  WidthRequest="350" HeightRequest="70" HorizontalOptions="Center" VerticalOptions="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" Spacing="5" >
                    <Label Text="Pontos" FontSize="16" TextColor="White" HorizontalOptions="Center"/>
                    <Label x:Name="lbPontos" Text="0" FontSize="20" TextColor="#FF6347" FontAttributes="Bold" HorizontalOptions="Center"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" Spacing="5">
                    <Label Text="Questão" FontSize="16" TextColor="White" HorizontalOptions="Center"/>
                    <Label x:Name="lbQuestao" Text="1/10" FontSize="20" TextColor="#4169E1" FontAttributes="Bold" HorizontalOptions="Center"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" Spacing="5">
                    <Label Text="Tempo" FontSize="16" TextColor="White" HorizontalOptions="Center"/>
                    <Label x:Name="lbTempo" Text="30s" FontSize="20" TextColor="#FFD700" FontAttributes="Bold" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Grid>

            <VerticalStackLayout x:Name="ConfigLayout" Spacing="20">
                <Frame BackgroundColor="#2C3E50" Margin="20,0" Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Nível de Dificuldade:" FontSize="16" TextColor="White"/>
                        <Picker x:Name="DifficultyPicker" Title="Fácil (1-10)" TextColor="White" TitleColor="Gray"
                                BackgroundColor="#1F2A38"
                                SelectedIndexChanged="DifficultyPicker_SelectedIndexChanged">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Fácil (1-10)</x:String>
                                    <x:String>Médio (1-50)</x:String>
                                    <x:String>Difícil (1-100)</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="#2C3E50" Margin="20,0" Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Operações:" FontSize="16" TextColor="White"/>
                        <Grid RowSpacing="10" ColumnSpacing="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="5" VerticalOptions="Center">
                                <CheckBox x:Name="chkAdicao" Color="#4169E1" CheckedChanged="Addition_CheckedChanged"/>
                                <Label Text="Adição (+)" FontSize="14" TextColor="White" VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5" VerticalOptions="Center">
                                <CheckBox x:Name="chkSubtracao" Color="#FF6347" CheckedChanged="Subtraction_CheckedChanged"/>
                                <Label Text="Subtração (-)" FontSize="14" TextColor="White" VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="5" VerticalOptions="Center">
                                <CheckBox x:Name="chkMultiplicacao" Color="#FFD700" CheckedChanged="Multiplication_CheckedChanged"/>
                                <Label Text="Multiplicação (x)" FontSize="14" TextColor="White" VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="5" VerticalOptions="Center">
                                <CheckBox x:Name="chkDivisao" Color="#4CAF50" CheckedChanged="Division_CheckedChanged"/>
                                <Label Text="Divisão (÷)" FontSize="14" TextColor="White" VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <Button Text="INICIAR JOGO" FontSize="18" TextColor="White"
                        BackgroundColor="#4CAF50" HeightRequest="50"
                        HorizontalOptions="Center" WidthRequest="340" CornerRadius="25"
                        Clicked="StartGame_Clicked">
                    <Button.ImageSource>
                        <FontImageSource Glyph="&#x1F3AE;" FontFamily="Segoe MDL2 Assets" Size="20" Color="White" />
                    </Button.ImageSource>
                </Button>
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="GameLayout" Spacing="20" IsVisible="False">
                <Frame BackgroundColor="#FF6347" Margin="20,0" Padding="20" CornerRadius="10">
                    <Label x:Name="lbQuestion" Text="7 - 1 = ?" TextColor="White" FontSize="36" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                </Frame>

                <VerticalStackLayout Margin="20,0">
                    <Label Text="Sua resposta:" FontSize="16" TextColor="White" Margin="0,0,0,5"/>
                    <Entry x:Name="entryResposta" Placeholder="Digite aqui..." PlaceholderColor="Gray" TextColor="White"
                           BackgroundColor="#1F2A38" Keyboard="Numeric"/>
                </VerticalStackLayout>

                <Button Text="PRÓXIMA" FontSize="18" TextColor="White"
                        BackgroundColor="#FFD700" HeightRequest="50"
                        HorizontalOptions="Center" WidthRequest="340" CornerRadius="25"
                        Clicked="CheckAnswer_Clicked"/>

                <Label x:Name="lbFeedback" Text="" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="20,10,20,0"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>